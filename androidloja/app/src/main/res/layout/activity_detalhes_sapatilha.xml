<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteúdo Principal -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <!-- Ícone do Menu -->
            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                android:tint="@android:color/white" />

            <!-- Título Centralizado -->
            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="Sneaker's Hub"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Conteúdo principal com Scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Imagem da sapatilha -->
                <ImageView
                    android:id="@+id/ivSapatilha"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerCrop" />

                <!-- Nome da marca e modelo -->
                <TextView
                    android:id="@+id/tvModeloMarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Preço -->
                <TextView
                    android:id="@+id/tvPreco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <!-- Categoria e género -->
                <TextView
                    android:id="@+id/tvCategoriaGenero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Botão "Adicionar ao carrinho" -->
                <Button
                    android:id="@+id/btnAdicionarCarrinho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@drawable/ic_carrinho"
                    android:drawablePadding="8dp"
                    android:backgroundTint="@color/primaryColor"
                    android:text="Adicionar ao carrinho"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Botão Flutuante para o Carrinho -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCarrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_carrinho"
            android:contentDescription="Abrir carrinho"
            android:backgroundTint="@color/primaryColor"
            android:tint="@android:color/white" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Drawer Lateral -->
    <LinearLayout
        android:id="@+id/rightDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#000000"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCarrinhoTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carrinho"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView para os itens do carrinho -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCarrinhoDrawer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
